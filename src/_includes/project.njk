---
layout: base.njk
faviconURL: ../../assets/favicon/favicon.ico
styleURL: ../../style.css
extraStyle: ../../styles/post.css
---

<div class="post">
    <a href="../../" style="margin-bottom: 1rem;">üè° home</a>
    <div class="title">
        {{ projectTitle }}
    </div>

    <div class="tags">
        <i class="fas fa-tags"></i>
        {% for tag in tags %}
            <a class="tag" href="{{'/tags/' + tag | url}}">{{ tag }}</a>
        {% endfor %}
    </div>

    {% if headerImg %}
        <div class="headerImg">
            <img src="{{ headerImg }}">
        </div>
    {% endif %}

    <div>
        {{ content | safe }}
    </div>
</div>

{% set previousProject = collections.project | getPreviousCollectionItem(page) %}
{% set nextProject = collections.project | getNextCollectionItem(page) %}
<div class="footer">
    {% if previousProject.url %}
        <a class="prevProj" href="{{ previousProject.url | url }}" onclick="firebase.analytics().logEvent('prev_project', { post: '{{ previousProject.data.projectTitle }}' });">
            <i class="fas fa-long-arrow-alt-left"></i>
            prev project
        </a>
    {% else %}
        <a class="prevProj" href="{{ collections.project[collections.project.length - 1].url | url }}" onclick="firebase.analytics().logEvent('prev_project', { post: '{{ collections.project[collections.project.length - 1].data.projectTitle }}' });">
            <i class="fas fa-long-arrow-alt-left"></i>
            prev project
        </a>
    {% endif %}

    <h2>üíª more stuff! üíª</h2>

    {% if nextProject.url %}
        <a class="nextProj" href="{{ nextProject.url }} " onclick="firebase.analytics().logEvent('next_project', { post: '{{ nextProject.data.projectTitle }}' });">next project
            <i class="fas fa-long-arrow-alt-right"></i>
        </a>
    {% else %}
        <a class="nextProj" href="{{ collections.project[0].url }}" onclick="firebase.analytics().logEvent('next_project', { post: '{{ collections.project[0].data.projectTitle }}' });">next project
            <i class="fas fa-long-arrow-alt-right"></i>
        </a>
    {% endif %}
</div>